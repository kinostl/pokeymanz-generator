{
  "private": true,
  "name": "pokemon_generator",
  "version": "0.0.0",
  "license": "MIT",
  "homepage": "https://kinostl.github.io/pokeymanz-generator",
  "scripts": {
    "build": "preact build",
    "build:gh": "GITHUB_PAGES=pokeymanz-generator preact build",
    "build:serve": "npm run build; gzip -k build/assets/data/*.json; gzip -k build/assets/data/pokemon/*.json;",
    "generate:json": "node tools/generateData.mjs",
    "generate:bundle": "bash tools/generateSprites.sh",
    "serve": "sirv build --port 8080 --cors --single --gzip",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest",
    "predeploy": "npm run build:gh",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "convert": "^4.8.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "gh-pages": "^4.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "lodash": "^4.17.21",
    "preact-cli": "^3.0.0",
    "sirv-cli": "1.0.3"
  },
  "dependencies": {
    "@preact/signals": "^1.1.2",
    "js-untar": "^2.0.0",
    "localforage": "^1.10.0",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
